<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/walk_widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <FrameLayout
        android:layout_width="112dp"
        android:layout_height="112dp">

        <ImageView
            android:id="@+id/walk_widget_ring"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/walk_widget_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_walk_preview_percent"
                android:textColor="@color/widget_title"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/walk_widget_center_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_walk_preview_center"
                android:textColor="@color/widget_subtitle"
                android:textSize="11sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/walk_widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_walk_preview_title"
            android:textColor="@color/widget_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/walk_widget_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/widget_walk_preview_subtitle"
            android:textColor="@color/widget_subtitle"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/walk_widget_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/widget_walk_preview_steps"
            android:textColor="@color/widget_task"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/walk_widget_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/widget_walk_preview_score"
            android:textColor="@color/widget_subtitle"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/walk_widget_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/widget_walk_preview_updated"
            android:textColor="@color/widget_subtitle_faint"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
