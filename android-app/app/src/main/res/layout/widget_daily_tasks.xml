<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/widget_greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/widget_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Good Morning" />

    <TextView
        android:id="@+id/widget_date_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/widget_subtitle"
        android:textSize="18sp"
        android:text="Sat, Feb 7 • 24°C" />

    <TextView
        android:id="@+id/widget_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/widget_subtitle_faint"
        android:textSize="18sp"
        android:text="2 tasks left" />

    <TextView
        android:id="@+id/widget_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/widget_task"
        android:textSize="19sp"
        android:text="No upcoming tasks"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_task_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/widget_task"
        android:textSize="19sp"
        android:text="Mon 9:00 AM - Task"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_task_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/widget_task"
        android:textSize="19sp"
        android:text="Tue 10:00 AM - Task"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_task_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/widget_task"
        android:textSize="19sp"
        android:text="Wed 11:00 AM - Task"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/widget_subtitle"
        android:textSize="18sp"
        android:text="and 2 more"
        android:visibility="gone" />
</LinearLayout>
