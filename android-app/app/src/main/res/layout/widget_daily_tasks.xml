<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_greeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/widget_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/widget_preview_greeting" />

        <TextView
            android:id="@+id/widget_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_add_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textColor="@color/widget_subtitle"
            android:textSize="14sp"
            android:text="@string/widget_preview_add" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_date_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/widget_subtitle"
        android:textSize="18sp"
        android:text="@string/widget_preview_date_temp" />

    <TextView
        android:id="@+id/widget_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/widget_subtitle_faint"
        android:textSize="18sp"
        android:text="@string/widget_preview_count" />

    <TextView
        android:id="@+id/widget_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/widget_task"
        android:textSize="19sp"
        android:text="@string/widget_preview_empty"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_task_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/widget_task"
        android:textSize="19sp"
        android:text="@string/widget_preview_task_1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_task_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/widget_task"
        android:textSize="19sp"
        android:text="@string/widget_preview_task_2"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_task_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/widget_task"
        android:textSize="19sp"
        android:text="@string/widget_preview_task_3"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/widget_subtitle"
        android:textSize="18sp"
        android:text="@string/widget_preview_more"
        android:visibility="gone" />
</LinearLayout>
