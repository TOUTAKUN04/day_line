<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_bg" />
            <stroke
                android:width="1dp"
                android:color="@color/widget_border" />
            <corners android:radius="0dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>

    <item
        android:insetLeft="1dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:centerColor="@color/widget_glass_mid"
                android:endColor="@color/widget_glass_shadow"
                android:startColor="@color/widget_glass_highlight"
                android:type="linear" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>
